{
  "manifest_version": 3,
  "name": "Smart Page Search",
  "version": "1.0.0",
  "description": "Search your browsing history with AI-powered semantic search. Automatic indexing, intelligent highlighting.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "*://mail.google.com/*",
        "*://web.whatsapp.com/*",
        "*://*.banking.com/*",
        "*://accounts.google.com/*",
        "*://accounts.microsoft.com/*",
        "*://github.com/login/*",
        "*://login.facebook.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
